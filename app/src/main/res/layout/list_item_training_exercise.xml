<!-- res/layout/list_item_training_exercise.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name -->
    <TextView
        android:id="@+id/trainingExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name: "
        android:textStyle="bold"/>

    <!-- Categories -->
    <TextView
        android:id="@+id/trainingExerciseCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories: "
        android:textStyle="italic"/>

    <!-- Description -->
    <TextView
        android:id="@+id/trainingExerciseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textStyle="italic"/>

    <!-- Duration -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trainingExerciseDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Duration: "
            android:layout_margin="3dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/TrainingExerciseDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_margin="3dp"
            />

    </LinearLayout>
</LinearLayout>
